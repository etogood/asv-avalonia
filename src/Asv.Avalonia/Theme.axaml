<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        xmlns:avalonia1="clr-namespace:Asv.Avalonia">
    <Design.PreviewWith>
        <Grid ColumnDefinitions="*,*">
            <ThemeVariantScope RequestedThemeVariant="Dark">
                <Border Padding="30" Background="{DynamicResource SystemRegionBrush}">
                    <StackPanel>
                        <avalonia:MaterialIcon Kind="Window"/>
                        <Button>Button</Button>
                        <Button Theme="{StaticResource TransparentButton}">Button</Button>
                        <TabControl Width="200" Height="200">
                            <TabItem Header="Header 1"/>
                            <TabItem Header="Header 2"/>
                        </TabControl>
                    </StackPanel>
                </Border>    
            </ThemeVariantScope>
            <ThemeVariantScope Grid.Column="1" RequestedThemeVariant="Light">
                <Border Padding="30" Background="{DynamicResource SystemRegionBrush}">
                    <StackPanel>
                        <avalonia:MaterialIcon Kind="Window"/>            
                        <Button>Button</Button>   
                        <TabControl Width="200" Height="200">
                            <TabItem Header="Header 1"/>
                            <TabItem Header="Header 2"/>
                        </TabControl>
                    </StackPanel>
                    
                </Border>
            </ThemeVariantScope>
        </Grid>
        
        
        
    </Design.PreviewWith>
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <MergeResourceInclude Source="avares://Asv.Avalonia/Controls/ContentDialog/ContentDialogStyles.axaml"/>
                <MergeResourceInclude Source="avares://Asv.Avalonia/Controls/InfoBar/InfoBarStyles.axaml"/>
                <MergeResourceInclude Source="avares://Asv.Avalonia/Controls/AdaptiveTabControlStrip/AdaptiveTabStripTabControl.axaml" />
            </ResourceDictionary.MergedDictionaries>
            <avalonia1:MaterialIconConverter x:Key="MaterialIconConverter" />
            
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <!-- Status theme colors -->
                    
                    <Color x:Key="AsvForegroundErrorColor">#cc5058</Color>
                    <Color x:Key="AsvBackgroundErrorColor">#3d353a</Color>
                    
                    <Color x:Key="AsvForegroundWarningColor">#e48f4d</Color>
                    <Color x:Key="AsvBackgroundWarningColor">#423b3c</Color>
                    
                    <Color x:Key="AsvForegroundSuccessColor">#21c088</Color>
                    <Color x:Key="AsvBackgroundSuccessColor">#37453d</Color>
                    
                    
                    <Color x:Key="AsvForegroundUnknownColor">Gray</Color>
                    
                    <Color x:Key="AsvForegroundInfoColor">#607ceb</Color>
                    <Color x:Key="AsvBackgroundInfoColor">#313945</Color>
                    
                    <Color x:Key="AsvForegroundInfo2Color">#9a5cd2</Color>
                    <Color x:Key="AsvBackgroundInfo2Color">#383442</Color>
                    
                    <Color x:Key="AsvForegroundInfo3Color">#21bfc0</Color>
                    <Color x:Key="AsvBackgroundInfo3Color">#364240</Color>
                    
                    <Color x:Key="AsvForegroundInfo4Color">#9dc443</Color>
                    <Color x:Key="AsvBackgroundInfo4Color">#38403c</Color>
                    
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <!-- Status theme colors -->
                    <Color x:Key="AsvForegroundErrorColor">#cc5058</Color>
                    <Color x:Key="AsvBackgroundErrorColor">#3d353a</Color>
                    
                    <Color x:Key="AsvForegroundWarningColor">#e48f4d</Color>
                    <Color x:Key="AsvBackgroundWarningColor">#423b3c</Color>
                    
                    <Color x:Key="AsvForegroundSuccessColor">#21c088</Color>
                    <Color x:Key="AsvBackgroundSuccessColor">#37453d</Color>
                    
                    
                    <Color x:Key="AsvForegroundUnknownColor">Gray</Color>
                    
                    <Color x:Key="AsvForegroundInfoColor">#607ceb</Color>
                    <Color x:Key="AsvBackgroundInfoColor">#313945</Color>
                    
                    <Color x:Key="AsvForegroundInfo2Color">#9a5cd2</Color>
                    <Color x:Key="AsvBackgroundInfo2Color">#383442</Color>
                    
                    <Color x:Key="AsvForegroundInfo3Color">#21bfc0</Color>
                    <Color x:Key="AsvBackgroundInfo3Color">#364240</Color>
                    
                    <Color x:Key="AsvForegroundInfo4Color">#9dc443</Color>
                    <Color x:Key="AsvBackgroundInfo4Color">#38403c</Color>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
        <!-- Status theme brushes -->
        <SolidColorBrush x:Key="AsvForegroundErrorBrush" Color="{DynamicResource AsvForegroundErrorColor}"/>
        <SolidColorBrush x:Key="AsvBackgroundErrorBrush" Color="{DynamicResource AsvBackgroundErrorColor}"/>
        
        <SolidColorBrush x:Key="AsvForegroundWarningBrush" Color="{DynamicResource AsvForegroundWarningColor}"/>
        <SolidColorBrush x:Key="AsvBackgroundWarningBrush" Color="{DynamicResource AsvBackgroundWarningColor}"/>
        
        <SolidColorBrush x:Key="AsvForegroundSuccessBrush" Color="{DynamicResource AsvForegroundSuccessColor}"/>
        <SolidColorBrush x:Key="AsvBackgroundSuccessBrush" Color="{DynamicResource AsvBackgroundSuccessColor}"/>
        
        <SolidColorBrush x:Key="AsvForegroundUnknownBrush" Color="{DynamicResource AsvForegroundUnknownColor}"/>
        
        <SolidColorBrush x:Key="AsvForegroundInfoBrush" Color="{DynamicResource AsvForegroundInfoColor}"/>
        <SolidColorBrush x:Key="AsvBackgroundInfoBrush" Color="{DynamicResource AsvBackgroundInfoColor}"/>
        
        <SolidColorBrush x:Key="AsvForegroundInfo2Brush" Color="{DynamicResource AsvForegroundInfo2Color}"/>
        <SolidColorBrush x:Key="AsvBackgroundInfo2Brush" Color="{DynamicResource AsvBackgroundInfo2Color}"/>
        
        <SolidColorBrush x:Key="AsvForegroundInfo3Brush" Color="{DynamicResource AsvForegroundInfo3Color}"/>
        <SolidColorBrush x:Key="AsvBackgroundInfo3Brush" Color="{DynamicResource AsvBackgroundInfo3Color}"/>
        
        <SolidColorBrush x:Key="AsvForegroundInfo4Brush" Color="{DynamicResource AsvForegroundInfo4Color}"/>
        <SolidColorBrush x:Key="AsvBackgroundInfo4Brush" Color="{DynamicResource AsvBackgroundInfo4Color}"/>
        
        <!--Tab control-->
        <ControlTheme x:Key="{x:Type TabItem}" BasedOn="{StaticResource {x:Type TabItem}}" TargetType="TabItem">
            <Style Selector="^[TabStripPlacement=Top] /template/ Border#PART_SelectedPipe">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="Margin" Value="0,1,0,0" />
            </Style>
        </ControlTheme>
        
        <!--Button-->
        <ControlTheme x:Key="TransparentButton" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BackgroundSizing" Value="InnerBorderEdge" />
        </ControlTheme>
        
        
        <x:Double x:Key="TabItemHeaderFontSize">14</x:Double>
        <!--<Thickness x:Key="TabItemHeaderMargin">8,0,8,0</Thickness>
        <Thickness x:Key="TabItemMargin">8,0,8,0</Thickness>-->
        <FontWeight x:Key="TabItemHeaderThemeFontWeight">SemiLight</FontWeight>
        <x:Double x:Key="TabItemMinHeight">28</x:Double>
        
        <system:Double x:Key="AsvFontSizeSmall">12</system:Double>
        <system:Double x:Key="AsvFontSizeNormal">14</system:Double>
        <system:Double x:Key="AsvH1FontSize">20</system:Double>
        <system:Double x:Key="AsvH2FontSize">18</system:Double>
        <system:Double x:Key="AsvH3FontSize">16</system:Double>
        
        <system:Double x:Key="AsvIconBigSize">40</system:Double>
        <system:Double x:Key="AsvIconMediumSize">30</system:Double>
        <system:Double x:Key="AsvIconSmallSize">20</system:Double>
        
    </Styles.Resources>
    
    <FluentTheme>
