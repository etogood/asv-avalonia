    <!--Button-->
    
    <Style Selector="Button.danger">
        <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource AsvBackgroundWarningBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AsvForegroundWarningBrush}" />
        </Style>

       
    </Style>
    
    <!--MaterialIcon-->
    <Style Selector="avalonia|MaterialIcon">
        
        <Style Selector="^.accent">
            <Setter Property="Foreground" Value="{DynamicResource  SystemAccentColorLight1}"/>
        </Style>
        <Style Selector="^.big">
            <Setter Property="Width" Value="{StaticResource  AsvIconBigSize}"/>
            <Setter Property="Height" Value="{DynamicResource  AsvIconBigSize}"/>
        </Style>
        <Style Selector="^.medium">
            <Setter Property="Width" Value="{StaticResource  AsvIconMediumSize}"/>
            <Setter Property="Height" Value="{DynamicResource  AsvIconMediumSize}"/>
        </Style>
        <Style Selector="^.small">
            <Setter Property="Width" Value="{StaticResource  AsvIconSmallSize}"/>
            <Setter Property="Height" Value="{DynamicResource  AsvIconSmallSize}"/>
        </Style>
        <Setter Property="Width" Value="{DynamicResource  IconElementThemeWidth}"/>
        <Setter Property="Height" Value="{DynamicResource  IconElementThemeHeight}"/>
        <Setter Property="Foreground" Value="{DynamicResource  TextControlForeground}"/>
    </Style>
   
   
    <!--Header-->
    <Style Selector="TextBlock">
        <Style Selector="^.h1">
            <Setter Property="FontSize" Value="{DynamicResource  AsvH1FontSize}"/>
            <Setter Property="FontWeight" Value="Thin"/>
            <Setter Property="Foreground" Value="{DynamicResource  TextControlForeground}"/>
        </Style>
        <Style Selector="^.h2">
            <Setter Property="FontSize" Value="{DynamicResource  AsvH2FontSize}"/>
            <Setter Property="FontWeight" Value="Thin"/>
            <Setter Property="Foreground" Value="{DynamicResource  TextControlForeground}"/>
        </Style>
        <Style Selector="^.h3">
            <Setter Property="FontSize" Value="{DynamicResource  AsvH3FontSize}"/>
            <Setter Property="FontWeight" Value="Thin"/>
            <Setter Property="Foreground" Value="{DynamicResource  TextControlForeground}"/>
        </Style>
        <Style Selector="^.description">
            <Setter Property="FontSize" Value="{DynamicResource  AsvFontSizeSmall}"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource   TextControlForegroundDisabled}"/>
        </Style>
    </Style>
    
    
    
</Styles>
