<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:example="clr-namespace:Asv.Avalonia.Example"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Asv.Avalonia.Example.DialogBoardView"
             x:DataType="example:DialogBoardViewModel">
    <StackPanel Grid.IsSharedSizeScope="True" HorizontalAlignment="Stretch" Spacing="8" Margin="8">
        <StackPanel Orientation="Vertical" Spacing="8" Margin="0,20,0,0">
            <Button Command="{Binding OpenFileCommand}"  Padding="0" Content="Open file dialog"/>
            <Button Command="{Binding SaveFileCommand}"  Padding="0" Content="Save file dialog"/>
            <Button Command="{Binding SelectFolderCommand}"  Padding="0" Content="Select folder dialog"/>
            <Button Command="{Binding ObserveFolderCommand}"  Padding="0" Content="Observe folder dialog"/>
            <Button Command="{Binding YesNoCommand}"  Padding="0" Content="Yes or No dialog"/>
            <Button Command="{Binding SaveCancelCommand}"  Padding="0" Content="Save cancel dialog"/>
            <Button Command="{Binding ShowUnitInputCommand}"  Padding="0" Content="Show input dialog"/>
        </StackPanel>
    </StackPanel>
</UserControl>
